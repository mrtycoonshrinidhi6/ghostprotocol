# ============================================================================
# GHOST PROTOCOL - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual API keys
# Never commit .env to version control!

# ============================================================================
# RUNTIME MODE CONFIGURATION
# ============================================================================

# Master switch: Controls entire system behavior
# true  = Use real APIs (Google, Etherscan, Gmail, etc.)
# false = Use enhanced mock generators with artificial latency
REALTIME_MODE=true

# Enable detailed error logging for real API calls
LOG_REALTIME_ERRORS=true

# Enable mock data generation logs (debugging)
LOG_MOCK_GENERATION=false

# Tool operation log level (DEBUG, INFO, WARNING, ERROR)
TOOL_LOG_LEVEL=INFO

# Print configuration on startup (debugging)
DEBUG_CONFIG=false

# ============================================================================
# AI & LLM APIS
# ============================================================================

# Gemini AI (Required for Memorial Chat)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_key

# ============================================================================
# GOOGLE APIS
# ============================================================================

# Google Custom Search (Required for Death Detection)
# Setup: https://developers.google.com/custom-search/v1/overview
GOOGLE_SEARCH_API_KEY=your_key
GOOGLE_SEARCH_ENGINE_ID=your_key

# Gmail API (Required for Email Analysis)
# Setup: https://developers.google.com/gmail/api/quickstart/python
GMAIL_CREDENTIALS_JSON=path/to/gmail_credentials.json
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Google Drive API (Required for Cloud Scanning)
# Setup: https://developers.google.com/drive/api/quickstart/python
GDRIVE_CREDENTIALS_JSON=path/to/gdrive_credentials.json

# ============================================================================
# BLOCKCHAIN APIS
# ============================================================================

# Etherscan (Required for Ethereum wallet balance)
# Get your key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# Polygonscan (Required for Polygon/MATIC balance)
# Get your key from: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Infura (Required for Web3 RPC access)
# Get your key from: https://infura.io/dashboard
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_secret

# Alchemy (Alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_key

# ============================================================================
# CRYPTOCURRENCY PRICE APIS
# ============================================================================

# CoinGecko (Free tier available)
# Get your key from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=optional_pro_key_for_higher_limits

# CoinMarketCap (Alternative to CoinGecko)
# Get your key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_key

# ============================================================================
# CLOUD STORAGE APIS
# ============================================================================

# Dropbox API
# Get your token from: https://www.dropbox.com/developers/apps
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret

# OneDrive API (Microsoft Graph)
# Setup: https://docs.microsoft.com/en-us/onedrive/developer/
ONEDRIVE_CLIENT_ID=your_onedrive_client_id
ONEDRIVE_CLIENT_SECRET=your_onedrive_client_secret
ONEDRIVE_TENANT_ID=your_microsoft_tenant_id

# ============================================================================
# EMAIL PROVIDERS
# ============================================================================

# IMAP Configuration (Generic email access)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=your_email@gmail.com
IMAP_PASSWORD=your_app_specific_password
IMAP_USE_SSL=true

# Outlook/Microsoft Graph
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# ============================================================================
# DEATH VERIFICATION APIS (MOCK - No real public API exists)
# ============================================================================

# Note: Death registries are typically state-specific and require legal access
# For demo purposes, these are mock endpoints
DEATH_REGISTRY_API_KEY=mock_api_key_for_demo
DEATH_REGISTRY_BASE_URL=https://mock.deathregistry.gov/api/v1

# Social Security Death Master File (Requires authorization)
SSA_DMF_API_KEY=requires_government_authorization

# ============================================================================
# NEWS & OBITUARY APIS
# ============================================================================

# Legacy.com (No official API - requires web scraping)
LEGACY_COM_API_KEY=not_available_use_scraping

# NewsAPI.org (For death-related news)
# Get your key from: https://newsapi.org/account
NEWS_API_KEY=your_key

# ============================================================================
# WEB3 & SMART CONTRACT
# ============================================================================

# Wallet Configuration
WALLET_PRIVATE_KEY=your_wallet_private_key_DO_NOT_SHARE
WALLET_ADDRESS=your_wallet_address

# Smart Contract Addresses (Replace with your deployed contracts)
SMART_WILL_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Network Configuration
BLOCKCHAIN_NETWORK=mumbai  # Options: mumbai, polygon, ethereum
RPC_URL=https://rpc-mumbai.maticvigil.com

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development  # Options: development, staging, production

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Frontend Configuration
FRONTEND_PORT=8501

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_STORAGE_PATH=./data/sessions

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================

# Master encryption key for vault (Generate with: openssl rand -hex 32)
VAULT_ENCRYPTION_KEY=your_32_byte_hex_encryption_key

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_for_auth

# ============================================================================
# RATE LIMITING
# ============================================================================

# API call limits (requests per hour)
RATE_LIMIT_GOOGLE_SEARCH=100
RATE_LIMIT_ETHERSCAN=5
RATE_LIMIT_GEMINI=60

# ============================================================================
# TESTING & DEBUG
# ============================================================================

# Mock Mode (Set to true to use mock data instead of real APIs)
USE_MOCK_DATA=false

# Debug Mode
DEBUG=false

# Test API Keys (Separate from production)
TEST_GEMINI_API_KEY=test_key_for_development
